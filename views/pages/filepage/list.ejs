<!DOCTYPE html>
<html lang="zh-Hant-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <head>
        <%- include('../../partials/head') -%>
        <%- include('../../partials/styles') -%>
    </head>
    <body>
        <%- include('../../partials/navbar') -%>
        <h1 class="text-center">list package</h1>
        <div class="card">
            <div class="card-body">
                <a href="/file/upload" class="btn btn-primary">上傳</a>
        <table class="table table-striped table-hover" style="margin:10px;">
            <thead>
                <tr>
                    <td>編號</td>
                    <td>名稱</td>
                    <td>preview</td>
                </tr>
            </thead>
            <tbody>
               <% files.forEach(function(file,index){ %>
                <tr>
                    <td><%= index+1 %></td>
                    <td><a href="/file/download/<%= file.filename %>"><%= file.filename %></a></td>
                    <td><img src="/<%=file.filename%>" alt=""/></td>
                </tr>
               <% }) %>
            </tbody>
        </table>
        </div>
        </div>

        <%- include('../../partials/scripts') -%>
    </body>
    </html>