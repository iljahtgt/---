<!DOCTYPE html>
<html lang="zh-Hant-TW">

<head>
    <%- include('../../partials/head') -%>
        <%- include('../../partials/styles') -%>
</head>

<body>
    <%- include('../../partials/navbar') -%>
        
            <form action="/account/register" method="POST" class="card" style="width:90%;margin:0 auto;">
                <div class="container" style="margin: 0 auto; width:50%;">
                <div class="form-group">
                    <h1 style="border: 3px solid black;">Register Page</h1>
                    <label for="username">請輸入使用者名稱:</label>
                    <input class="form-control" type="username" id="username" name="username" placeholder="椒麻雞">
                </div>
                <div class="form-group">
                    <label for="email">請輸入Email:</label>
                    <input class="form-control" type="email" id="email" name="email" placeholder="xxx@yyy.com">
                </div>
                <div class="form-group">
                    <label for="password">請輸入密碼 :</label>
                    <input class="form-control" type="password" id="pwd" name="pwd">
                </div>
                <div class="form-group">
                    <a class="btn btn-primary" onclick="registeracc()"> Register </a>
                </div>
            </div>
            </form>
            <%- include('../../partials/footer') -%>
        <%- include('../../partials/scripts') -%>
        <script>

            function registeracc(){
                var newmember={
                    username:$("#username").val(),
                    email:$("#email").val(),
                    pwd:$("#pwd").val()
                }
            $.ajax({
                type:"POST",
                url:"http://localhost:1214/account/register/new",
                data:newmember
            }).done(function(data){
                alert("welcome");
                window.location.href="http://localhost:1214/account/login";
            }).fail(function(error){
                alert(error);
            });
            }
        </script>
</body>

</html>